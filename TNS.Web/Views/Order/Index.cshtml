@model TNS.Web.Models.OrderViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@section footerJS {
    <script src="~/Assets/libs/jquery/jquery.js"></script>
    <script src="~/Assets/Admin/plugins/bs-custom-file-input/bs-custom-file-input.js"></script>
    <script src="~/Assets/Client/js/controller/shoppingCart.js"></script>
    <script type="text/javascript">
        $(function () {
            bsCustomFileInput.init();
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnDelete").show();
            var i = 0;
            i++;

            $('#addRow').click(function () {
                $('#tbody').append('<tr id="rowOrderDetail' + i + '">' +
                    '<td><a><input id="ProductLink" name="ProductLink[]" class="form-control"type="text" value=""placeholder="Nhập link sản phẩm" /></a><span class="error text-danger">*Không được để trống</span></td> ' +
                    '<td><div class="row"><div class="custom-file col-md-9"><input type="file" class="custom-file-input" id="ProductImage" name="ProductImage" accept="image/*" />' +
                    '<label class= "custom-file-label" for="ProductImage">Chọn ảnh</label>' +
                    '<span class="error text-danger">*Không được để trống</span>' +
                    '</div >' +
                    '<div class="col-md-3"><img id="blah" name="blah" style="width:50px; height:50px;" src="/UploadedFiles/ProductImage/defaut.png" /></div></div >' +
                    '</td>' +
                    '<td><a><input id="ProductDetail" name="ProductDetail[]" class="form-control" type="text" value="" placeholder="Chọn màu sắc, kích thước" /><span class= "error text-danger" >* Không được để trống</span ></a></td>' +
                    '<td><a><input id="Quantity" name="Quantity[]" class="form-control" type="number" value="" /><span class="error text-danger">*Chọn SL</span></a></td>' +
                    '<td><a><input id="Description" name="Description[]" class="form-control" type="text" value="" placeholder="Yêu cầu thêm" /></a></td>' +
                    '<td><button class="btn btn-sm btn-danger remove" id="btnDelete"><i class="fa fa-trash"></i></button></td>' +
                    '</tr>');
                $("#btnDelete").hide();
            });

            $(document).on('click', '.remove', function () {
                $(this).closest("tr").remove();
            });
            $("#btnDelete").hide();

            $(document).on('change', '.custom-file-input', function (event) {
                $(this).next('.custom-file-label').html(event.target.files[0].name);
            });
            $("#ProductImage").on('change', function () {
                var input = $(this)[0];
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $("#blah").attr('src', e.target.result).fadeIn('slow');
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            });
        });

