@model IEnumerable<TNS.Web.Models.PackageDetailViewModel>
@{
    var package = (TNS.Web.Models.PackageViewModel)ViewBag.Package;
    ViewBag.Title = "ListPackageDetailByID";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Chi tiết đơn ký gửi</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Chi tiết đơn ký gửi</li>
                    </ol>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <!-- Main content -->
                    <div class="invoice p-3 mb-3">
                        <!-- title row -->
                        <div class="row">
                            <div class="col-12">
                                <h4>
                                    <i class="fas fa-globe"></i> AN LOGISTICS
                                    <small class="float-right">Ngày đặt: @package.CreatedDate</small>
                                </h4>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- info row -->
                        <div class="row invoice-info">
                            <div class="col-sm-8 invoice-col">
                                <div class="row invoice-info">
                                    <div class="col-sm-12 invoice-col">
                                        <h5><i class="fas fa-user"></i> Thông tin khách hàng</h5>
                                        <address>
                                            <strong>ID đơn hàng: @package.PackageCode</strong><br />
                                            <strong>Tài khoản:</strong> @package.CreatedBy<br />
                                            <strong>Họ và tên:</strong> @package.CustomerName<br />
                                            <strong>Điện thoại:</strong> @package.CustomerMobile<br />
                                            <strong>Địa chỉ:</strong> @package.CustomerAddress<br />
                                            <strong>Ghi chú:</strong><strong class="text-danger"> @package.CustomerMessage</strong><br />
                                        </address>
                                    </div>
                                    <!-- /.col -->
                                </div>
                                <div class="row invoice-info">
                                    <div class="col-sm-12 invoice-col">
                                        <h5>
                                            <i class="fas fa-history"></i> Tình trạng đơn hàng:
                                        </h5>
                                        <address>
                                            <strong>Hình thức thanh toán: @package.PaymentMethod</strong><br />
                                            <strong>Vị trí đơn hàng:</strong>
                                            <span class="@(package.PaymentStatus == 0 ? "badge badge-secondary" : package.PaymentStatus == 1 ? "badge badge-dark" : package.PaymentStatus == 2 ? "badge badge-primary" :
                                                               package.PaymentStatus == 3 ? "badge badge-info" : package.PaymentStatus == 4 ? "badge badge-light" : package.PaymentStatus == 5 ? "badge badge-primary" : package.PaymentStatus == 6 ? "badge badge-warning" :
                                                               package.PaymentStatus == 7 ? "badge badge-success" : "badge badge-danger")">
                                                @(package.PaymentStatus == 0 ? "Chờ xác nhận" : package.PaymentStatus == 1 ? "Đã xác nhận" : package.PaymentStatus == 2 ? "Đã đặt hàng" :
                                                      package.PaymentStatus == 3 ? "Kho TQ nhận" : package.PaymentStatus == 4 ? "Xuất kho TQ" : package.PaymentStatus == 5 ? "Nhập kho VN" : package.PaymentStatus == 6 ? "Đang giao hàng" :
                                                      package.PaymentStatus == 7 ? "Đã giao hàng" : "Đã hủy")
                                            </span><br />
                                        </address>
                                    </div>
                                </div>
                            </div>
                            <!-- /.col -->
                            <div class="col-sm-4 invoice-col">
                                <h5>
                                    <i class="fas fa-dollar-sign"></i> Thông tin thanh toán
                                </h5>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                        <!-- Table row -->
                        <div class="row">
                            <div class="col-12 table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Mã vận đơn</th>
                                            <th>Ghi chú</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detail in Model)
                                        {
                                            <tr>
                                                <td>@detail.TrackingID</td>
                                                <td>@detail.Description</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                        <!-- this row will not appear when printing -->
                        <div class="row no-print">
                            <div class="col-12">
                                <a href="invoice-print.html"
                                   rel="noopener"
                                   target="_blank"
                                   class="btn btn-default"><i class="fas fa-print"></i> Print</a>
                                <button type="button" class="btn btn-success float-right">
                                    <i class="far fa-credit-card"></i> Submit Payment
                                </button>
                                <button type="button"
                                        class="btn btn-primary float-right"
                                        style="margin-right: 5px">
                                    <i class="fas fa-print"></i> In đơn hàng
                                </button>
                            </div>
                        </div>
                    </div>
                    <!-- /.invoice -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section footerJS{
    <script src="https://unpkg.com/mustache@4.1.0/mustache.js"></script>
    <script src="~/Assets/libs/moment.js/moment.js"></script>
    <script src="~/Assets/Client/js/controller/listPackageClient.js"></script>
}